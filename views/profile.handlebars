<section class="profile_area">
	<h4>
		<div class="row">
			<div class="col-md-4">
				<p>My Profile</p>
			</div>
			<div class="col-md-8 text-right">
				<button class="btn btn-default btn-sm btn-update" id="post-comment" data-id="{{user._id}}"><i class="fa fa-pencil"></i></button>
			</div>
		</div>
	</h4>

	<table class="table table-bordered table-striped table-responsive table-hovered">
		<tr>
			<th scope="row">First Name</th>
			<td>{{user.firstname}}</td>
		</tr>
		<tr>
			<th scope="row">Surname</th>
			<td>{{user.surname}}</td>
		</tr>
		<tr>
			<th scope="row">Email</th>
			<td>{{user.email}}</td>
		</tr>
		<tr>
			<th scope="row">Date Joined</th>
			<td>{{timeago user.dateCreated}}</td>
		</tr>
	</table>
	<div class="row">
		<div class="col-md-12 text-right">
			<button class="btn btn-default accountDelete" id="btn-delete-account">Delete Account</button>
		</div>
	</div>

	<div class="modal fade" id="updateModal">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	        <h3 class="modal-title">Update Profile</h3>
	      </div>
	      <div class="modal-body">
	        <form method="post" action="" class="form-horizontal" role="form" id="profileUpdateForm">
				<div class="form-group">
				    <label for="firstname" class="col-sm-3 col-xs-3 col-sm-offset-1 col-xs-offset-1 control-label">New First Name</label>
				    <div class="col-sm-7 col-xs-7">
				    	<input type="hidden" name="_method" value="PUT" />
				      	<input type="text" name="firstname" class="form-control" id="firstname" required>
				    </div>
				</div>
				<div class="form-group">
					<label for="surname" class="col-sm-3 col-xs-3 col-sm-offset-1 col-xs-offset-1 control-label">New Surname</label>
					<div class="col-sm-7 col-xs-7">
				    	<input type="text" name="surname" class="form-control" id="surname" required>
				    </div>
				</div>
				<div class="form-group">
					<label for="email" class="col-sm-3 col-xs-3 col-sm-offset-1 col-xs-offset-1 control-label">New Email</label>
					<div class="col-sm-7 col-xs-7">
				    	<input type="email" name="email" class="form-control" id="email" required>
				    </div>
				</div> 
				<div class="form-group text-right">
					<div class="col-sm-offset-1 col-sm-10">
				    	<button type="submit" class="btn btn-primary" data-id="{{user._id}}">Update Profile</button>
				    </div>
				</div>
			</form>
	      </div>
	    </div><!-- /.modal-content -->
	  </div><!-- /.modal-dialog -->
	</div><!-- /.modal -->



	<div class="modal fade" id="accountDeleteModal">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	        <h3 class="modal-title">Are you absolutely sure?</h3>
	      </div>
	      <div class="modal-body">
	      	<p class="alert alert-warning">This action <strong>cannot</strong> be undone. This will permanently delete this <strong>{{user.email}}</strong> account and all images and comments attached to it.</p>

	        <form method="" action="" class="form-horizontal" role="form" id="accountDeleteForm">
				<div class="form-group">
					<div class="col-md-12">
					    <label for="user" class="control-label">Please Enter your email address</label>
					    <input type="email" name="user" class="form-control" id="user" required>
				    </div>
				</div>
				<div class="form-group text-right">
					<div class="col-md-12">
						<button type="submit" class="btn btn-default btn-block accountDelete" id="btn-account-delete-yes" disabled="disabled">I Understand the consequences, Delete this account</button>
					</div>
				</div>
			</form>
	      </div>
	    </div><!-- /.modal-content -->
	  </div><!-- /.modal-dialog -->
	</div><!-- /.modal -->
</section>